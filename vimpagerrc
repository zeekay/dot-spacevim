set nocompatible

let &rtp.=','.expand('~/.vim/addons/vice')
call vice#Initialize({
    \ 'addons': [
        \ 'github:zeekay/vice-colorful',
        \ 'github:zeekay/vice-standard-issue',
        \ 'github:mattn/webapi-vim',
    \ ],
    \ 'commands': {
        \ 'Gist': ['github:mattn/gist-vim'],
    \ }
\ })

let loaded_matchparen = 1
let g:no_asniesc_menu = 1
let g:no_cecutil_maps = 1
let vimpager_disable_ansiesc = 0
let vimpager_disable_x11 = 1
let vimpager_scrolloff = 0

set buftype=nofile modifiable
set expandtab
set laststatus=0
set nohls
set nolazyredraw
set ro
set softtabstop=8
set tabstop=8
set ttyfast

inoremap <Esc> <Esc>`^
nnoremap <leader>q :call vice#standard_issue#smart_quit()<cr>
nnoremap Q :call vice#standard_issue#smart_quit()<cr>
nnoremap J <c-d>
nnoremap K <c-u>
vnoremap J <c-d>
vnoremap K <c-u>
inoremap <c-u> <c-o>dd
map <cr> <cr>
map <c-d> <c-d>
map <c-u> <c-u>
map j j
map k k
map h h
map l l
map g g
map gg gg
map A $
map w w
map W W
map b b
map B B
map <c-f> <c-f>
map <c-b> <c-b>
map { {
map / /
map ? ?
map } }
map y y
map z z
vmap G G
map n n
map N N
map v v
nnoremap ; :

func! s:JumpToFirstDiff()
    " Jump to top
    normal gg

    if &ft == 'diff'
        " jump to first difference
        normal ]]
        echo
    endif
endf

func! s:SetupColors()
    if $VIM_LIGHT_BG
        set background=light
        colorscheme solarized
        hi Normal ctermbg=15
        hi ansiWhite ctermfg=246
        hi ansiYellow ctermfg=136
    else
        color hybrid
        hi Normal ctermbg=235
        hi ansiWhite ctermfg=245
    endif
endf

func! s:SetupVimpager()
    " Wipe out vimpager's autocommands and manually call AnsiEsc so we can
    " override things.
    au! VimEnter *
    silent! AnsiEsc
    call s:SetupColors()
    call s:JumpToFirstDiff()
endf

au VimEnter * call s:SetupVimpager()

" vim:set ft=vim:
